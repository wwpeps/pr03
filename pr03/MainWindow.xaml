<Window x:Class="pr03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pr03"
        mc:Ignorable="d"
        Title="quicksort" Height="450" Width="400">
    <Grid>
        <Label Name="la" Content="Enter Name" FontSize="23" FontFamily="Blackadder ITC" Margin="42,50,146,318" />
        <Label Name="lb" Content="Enter Password" FontSize="23" FontFamily="Blackadder ITC" Margin="42,87,167,241" />
        <TextBox Name="ta" FontSize="23" FontFamily="Blackadder ITC" Margin="221,50,46,318" />
        <TextBox Name="tb" FontSize="23" FontFamily="Blackadder ITC" Margin="221,96,46,273" />
        <Button Name="ba" Content="Click" FontFamily="Blackadder ITC" Margin="124,152,146,201" FontSize="23" Click="ba_Click"/>
        <ListBox Name="lia" FontSize="15" FontFamily="Blackadder ITC" Margin="76,247,98,85">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Path=name}"/>
                        <TextBlock Text="{Binding Path=password}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
    </Grid>
</Window>
